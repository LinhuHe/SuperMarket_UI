/* pages/collection/collection.wxss */
.wholeCollection
{
  display: flex;
  flex-direction: column;
  justify-items: center;
  background-color: whitesmoke;
}

.singleCollection
{
  width: 100%;
  height: 350rpx;
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.collection-img
{
  width: 40%; /*300rpx*/
  height: 300rpx;
  border: 5rpx aqua solid;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.singleInfo
{
  width: 60%; /*450rpx*/
  height: 300rpx;
  display: flex;
  flex-direction: column;
}

.single-name
{
  width: 100%;
  color: black;
  font-size: 45rpx;
  font-weight: bold;
  overflow:hidden; /*超出一行文字自动隐藏 也有其他值*/
  text-overflow:ellipsis /*文字隐藏后添加省略号*/
}

.single-cs
{
  color: gray;
  font-size: 35rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  /*text-align: center;*/
}

.single-price
{
  font-size: 40rpx;
  color: OrangeRed;
}

.single-status
{
  height: 50rpx;
  width: 100rpx;
  background-color: gray;
  text-align: center;
  border-radius: 10rpx;
}

.single-status .single-font
{
  color: white;
  font-size: 40rpx;
  position: relative;
  padding-bottom: 3rpx;
}

.Uncollect
{
  width: 130rpx;
  height: 40rpx;
  background-color: orangered;
  border-radius: 20rpx;
  text-align: center;
  
  position: absolute;
  margin-left: 280rpx;
  position: relative;
  margin-top: 80rpx;

  font-size: 30rpx;
  font-weight: 500;
  color: whitesmoke;
}