/* pages/orderList/orderList.wxss */
.wholeOrder
{
  display: flex;
  flex-direction: column;
  justify-items: center;

}

.singleOrder{
  border-top:5rpx #E6E6FA solid ;
  border-bottom:5rpx #E6E6FA solid ;
  border-radius: 20rpx;
  background-color: #FFFAF0;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.singleGood{
  width: 100%;
  height: 350rpx;
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.order-img
{
  width: 40%; /*300rpx*/
  height: 300rpx;
  border: 5rpx aqua solid;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.singleInfo
{
  width: 60%; /*450rpx*/
  height: 300rpx;
  display: flex;
  flex-direction: column;
}

.single-name
{
  width: 100%;
  color: black;
  font-size: 45rpx;
  font-weight: bold;
  overflow:hidden; /*超出一行文字自动隐藏 也有其他值*/
  text-overflow:ellipsis /*文字隐藏后添加省略号*/
}

.single-price
{
  font-size: 40rpx;
  color: OrangeRed;
}

.line
{
  width: 750rpx;
  height: 3rpx;
  background-color: #DCDCDC;
}