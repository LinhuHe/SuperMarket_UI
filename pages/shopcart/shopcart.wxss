/* pages/shopcart/shopcart.wxss */
.wholeShop
{
  background-color: #FFFAF0;
  border-radius: 20rpx;
}

.shoper-name
{
  font-weight: bold;
  font-size: 70rpx;
  overflow:hidden; /*超出规定（默认为1）行文字自动隐藏 也有其他值*/
  text-overflow:ellipsis; /*文字隐藏后添加省略号*/
  margin-top: 40rpx; /*为了设置shop之间的间隔，将这个view标签范围扩大到了整个singleGood，后面字体属性需要再设置来覆盖这个的影响*/
  border-top: 5rpx  #E6E6FA solid;
  border-bottom: 5rpx  #E6E6FA solid;
  border-radius: 20rpx;
}

.singleGood
{
  height: 350rpx;
  display: flex;
  flex-direction: row;
}

.isSelect
{
  width: 10%;
  margin-left: 10rpx;
  margin-top: 100rpx;
}

.single-img-stock
{
  display: flex;
  flex-direction:  column;
  width: 35%;
}

.single-img
{
  margin-top: 20rpx;
  height: 263rpx;
  width: 100%;
}

.single-stock
{
  font-size:  40rpx;
  color:gray;
}

.single-info
{
  width: 55%;
  display: flex;
  flex-direction: column;
  font-weight: 500;
  font-size: 40rpx;
}

.single-name
{
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;/*设置 需要显示的行数*/
  overflow:hidden; /*超出规定（默认为1）行文字自动隐藏 也有其他值*/
  text-overflow:ellipsis; /*文字隐藏后添加省略号*/

  font-size: 45rpx;
  font-weight: 700;
  margin-top: 20rpx;
}

.single-color-size
{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 35rpx;
  color: gray;
}

.single-price
{
  color: orangered;
}

.single-status
{
  height: 50rpx;
  width: 100rpx;
  background-color: gray;
  text-align: center;
  border-radius: 10rpx;
}

.single-status .single-font
{
  color: white;
  font-size: 40rpx;
  position: relative;
  padding-bottom: 3rpx;
}



.remove
{
  width: 160rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: orangered;

  font-size: 30rpx;
  color: whitesmoke;
  text-align: center;

  position: relative;
  margin-left: 230rpx;
  margin-top: 35rpx;
}

.buy
{
  width: 100%;
  height: 100rpx;
  background-color: lightgray;
  position: fixed;
  bottom: 0rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.buy .heji
{
  font-size: 50rpx;
  color: black;
}

.buy .price
{
  font-size: 40rpx;
  color: orangered;
  margin-top: 10rpx;
}

.buy .priceShow
{
  display: flex;
  flex-direction: row;
  position: fixed;
  left: 15rpx;
}

.buy .buynow
{
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: orangered;
  text-align: center;

  color: white;

  position: fixed;
  right: 15rpx;
}
.buy .buynow .offset
{
  margin-top: 15rpx;
}

.line
{
  width: 750rpx;
  height: 3rpx;
  background-color: #DCDCDC;
}
